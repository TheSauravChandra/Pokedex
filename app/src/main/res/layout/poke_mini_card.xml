<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
  
  <data>
  
    <variable
        name="name"
        type="String" />
  
    <variable
        name="level"
        type="String" />
  
    <variable
        name="hp"
        type="String" />
  
    <variable
        name="types"
        type="String" />
  
    <import type="android.view.View" />

  </data>
  
  
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:background="@color/black">
  
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:elevation="2dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:id="@+id/mcvRoundedBg"
        android:transitionName="card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    
    <ImageView
        android:id="@+id/ivPic"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:background="@color/grey"
        android:transitionName="photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
  
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:background="@android:color/transparent"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="serif-monospace"
        android:text="@{name, default = Unknown}"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:transitionName="name"
        app:layout_constraintLeft_toRightOf="@id/ivPic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivPic"
        tools:text="Pokemon Name" />
    
    
    <TextView
        android:id="@+id/tvLv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="serif-monospace"
        android:text="@{ `LV:` + ((level==null)?`0`:level), default = 0}"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:visibility="@{(level==null)?View.GONE:View.VISIBLE}"
        app:layout_constraintLeft_toRightOf="@id/ivPic"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        tools:text="LV 20" />
    
    
    <TextView
        android:id="@+id/tvHp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="serif-monospace"
        android:text="@{ `HP:` + ((hp==null)?`0`:hp), default = 0}"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:visibility="@{(hp==null)?View.GONE:View.VISIBLE}"
        app:layout_constraintLeft_toRightOf="@id/tvLv"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        tools:text="HP 32" />
    
    <TextView
        android:id="@+id/tvTypes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:fontFamily="serif-monospace"
        android:text="@{types, default = ``}"
        android:textColor="@color/teal_700"
        android:textSize="16dp"
        app:layout_constraintLeft_toRightOf="@id/ivPic"
        app:layout_constraintTop_toBottomOf="@id/tvHp"
        tools:text="Grass, Metal" />
  
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>